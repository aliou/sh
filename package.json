{
  "name": "@aliou/sh",
  "version": "0.1.0",
  "description": "Shell parser/AST for POSIX/Bash/mksh/zsh (WIP)",
  "repository": {
    "type": "git",
    "url": "https://github.com/aliou/sh.git"
  },
  "license": "UNLICENSED",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "sideEffects": false,
  "engines": {
    "node": ">=22"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "check": "biome check .",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "lint-staged": "lint-staged",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "build:js": "rolldown -c",
    "build:types": "tsc -p tsconfig.build.json",
    "build": "pnpm build:js && pnpm build:types",
    "changeset": "changeset",
    "prepack": "pnpm build",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs,cjs,json}": [
      "biome check --write"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^24.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.0",
    "rolldown": "^1.0.0-rc.1",
    "typescript": "^5.8.0",
    "vitest": "^3.2.0"
  },
  "packageManager": "pnpm@10.26.1"
}
